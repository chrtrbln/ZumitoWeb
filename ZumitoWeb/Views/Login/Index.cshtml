@model ZumitoWeb.ViewModels.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Login - Zumitos</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <div class="login-container">
            <img src="~/images/logo2.jpg" />
            <h4>Acceso Zumitos</h4>
            @if (!string.IsNullOrEmpty(ViewBag.Error))
            {
                <div class="error">@ViewBag.Error</div>
            }

            <form asp-controller="Login" asp-action="Ingresar" method="post">
                <div class="mb-3">
                    <label asp-for="Nombre" class="form-label">Nombre:</label>
                    <input asp-for="Nombre" class="form-control" placeholder="Ingrese su nombre" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Pass" class="form-label">Contraseña:</label>
                    <input asp-for="Pass" type="password" class="form-control" placeholder="Ingrese su contraseña" />
                    <span asp-validation-for="Pass" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary w-100">Ingresar</button>
            </form>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
<style>

    body {
        background-color: #f5f1d5;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .container {
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .login-container {
        padding: 2rem 5rem 5rem 5rem;
        background-color: white;
        width: 40%;
        border: 2px solid white;
        border-radius: 20px;
        box-shadow: 0 0 15px #7d5d43;
    }

    h4{
        color: #f1e89b;
        text-align: center;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

    .btn-primary{
        background-color: #de8430;
        border: 2px solid #d47924;
    }

    .btn-primary:hover {
        background-color: #ca711e;
        border: 2px solid #c26b18;
    }

    img{
        display: block;
        margin: auto;
        max-height: 200px;
        margin-bottom: 1.5rem;
    }

    .error{
        color: red;
    }
</style>
