@{
    ViewBag.Title = "Pedidos y Ruta";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Asegúrate que este sea tu layout
}

<div class="container mt-5">
    <h2 class="mb-4">Pedidos y Ruta</h2>

    <!-- Selección de Empleado -->
    <div class="mb-3">
        <label for="empleadoSelect" class="form-label">Selecciona un empleado</label>
        <select class="form-select" id="empleadoSelect">
            <option selected disabled>Elige un empleado...</option>
            <option value="1">Juan Pérez</option>
            <option value="2">María López</option>
            <option value="3">Carlos Sánchez</option>
        </select>
    </div>

    <!-- Listado de pedidos -->
    <h5>Pedidos asignados</h5>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID Pedido</th>
                <th>Cliente</th>
                <th>Dirección</th>
                <th>Estado</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>#00123</td>
                <td>Ana Torres</td>
                <td>Calle 123, Ciudad</td>
                <td>Pendiente</td>
            </tr>
            <tr>
                <td>#00124</td>
                <td>Pedro Díaz</td>
                <td>Avenida 456, Ciudad</td>
                <td>Pendiente</td>
            </tr>
        </tbody>
    </table>

    <!-- Mapa de Google -->
    <h5>Mapa de Ruta</h5>
    <div id="mapa" style="width: 100%; height: 400px; border-radius: 10px; margin-top: 20px;">
        <iframe width="100%"
                height="100%"
                frameborder="0"
                style="border:0"
                src="https://www.google.com/maps/embed/v1/place?key=AIzaSyCr9b47Fx24pPiQHu545mNY6aU-vmtgUAQ&q=Ciudad"
                allowfullscreen>
        </iframe>
    </div>
</div>
