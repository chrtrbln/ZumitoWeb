@model ZumitoWeb.Models.Producto

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container h-100">
    <div class="row align-items-center">
        <div class="col p-4 card mx-auto">
            <h1>Eliminar</h1>

            <h3>Estas seguro que quieres eliminar el siguiente registro?</h3>
            <div>
                <h4>Producto</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Nombre)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Nombre)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Precio)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Precio)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Inventario)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Inventario)
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Eliminar" class="btn btn-danger" /> |
                    <a asp-action="Index">Regresar</a>
                </form>
            </div>
        </div>
    </div>
</div>
